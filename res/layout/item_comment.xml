<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvNameComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"        
        android:text="Juan Perz"
        android:textColor="@color/secondary_aplication"
        android:textSize="@dimen/text_big"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Comentarios"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold" />
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tvComment"
            android:background="@color/secondary_aplication"/>
    </RelativeLayout>
    
    
    <TextView
        android:id="@+id/tvDateComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"        
        android:text="00-00-0000"
        android:textColor="@color/primary_aplication"
        android:textSize="@dimen/text_normal"/>
    

</RelativeLayout>