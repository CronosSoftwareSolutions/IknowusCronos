<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView 
                android:id="@+id/tvTitleForum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_big"
                android:textColor="@color/secondary_aplication"
                android:text="Titulo"
                android:textStyle="bold"/>
            <TextView 
                android:id="@+id/tvNameAut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_big_normal"
                android:textColor="@color/primary_aplication"
                android:text="Juan Perez"
                android:textStyle="bold"/>
            <TextView 
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="este es mi articulo"
                android:textColor="@color/text_gray"/>
        </LinearLayout>
        
         <TextView 
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="25-10-2015"
                android:textColor="@color/text_gray"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

         <Button
             android:id="@+id/btnFavoriteForum"
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:background="@drawable/ic_favorito" />

    </RelativeLayout>

</RelativeLayout>